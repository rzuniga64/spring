<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- This is an example of autowriring by type We want to inject
         two classes into the Logger2 class that are of different types.
         Not recommended if the application huge with classes and lots
         of dependencies. Second problem is there can be no ambiguuity
         with class names. Third problem is if more than one of the Logger2
         methods uses an interface type in its parameter list then there would
         be ambiguity.
    -->
    <bean id="autowirebytype" class="com.spring.autowirebytype.Logger"
          autowire="byType">
    </bean>

    <bean id="consolewriter" class="com.spring.autowirebytype.ConsoleWriter">
    </bean>

    <bean id="filewriter" class="com.spring.autowirebytype.FileWriter">
    </bean>

</beans>