<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName"
       default-autowire-candidates="consoleWriter, fileWriter">

    <bean id="autowirebydefault"
          class="com.spring.autowirebydefault.Logger4">
    </bean>

    <bean name="consoleWriter"
          class="com.spring.autowirebydefault.ConsoleWriter">
    </bean>

    <bean id="fileWriter" class="com.spring.autowirebydefault.FileWriter">
    </bean>
</beans>